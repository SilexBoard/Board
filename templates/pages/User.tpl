<div class="user_avatar">
	<img src="{{ Dir.Style }}{{ Style.Dir }}/icons/g_256_user.png" class="avatar">
</div>
<div class="Container user">
	<div class="container_head">
		<div class="title">{{ lang=com.sbb.user.profile_of }} "{{ Profile.Username }}"</div>
	</div>
	<div class="content">
		<div class="info">
			<span class="group" title="{{ lang=com.sbb.user.profile.group }}">{{ Profile.Group }}</span>
			<span class="gender male" title="{{ lang=com.sbb.user.profile.gender }}">{{ lang=com.sbb.user.gender.male }}</span>
			<span class="joined" title="{{ lang=com.sbb.user.profile.joined }}">{{ Profile.Joined }}</span>
			<span class="activity" title="{{ lang=com.sbb.user.profile.activity }}">{{ Profile.Activity }}</span>
			<span class="language" title="{{ lang=com.sbb.user.profile.language }}">{{ Profile.Language }}</span>
			<span class="birthday" title="{{ lang=com.sbb.user.profile.birthday }}">{{ Profile.Birthday }}</span>
			<span class="age" title="{{ lang=com.sbb.user.profile.age }}">{{ Profile.Age }}</span>
		</div>
	</div>
	<div class="content">
		<div class="signature" title="{{ lang=com.sbb.user.profile.signature }}">
			{{ Profile.Signature }}
		</div>
	</div>
</div>
<div style="clear: both;"></div>
<div class="Container">
	More Infos
</div>